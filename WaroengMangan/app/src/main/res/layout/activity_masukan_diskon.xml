<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.galang.waroengmangan.MasukanDiskonActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include
        android:id="@+id/cutomtoolbar1"
        layout="@layout/layout_toolbar">
    </include>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Menu makanan"/>
    <Spinner
        android:id="@+id/spinner_menus"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:met_floatingLabel="highlight"
        android:layout_margin="10dp"
        android:inputType="number"
        android:id="@+id/txt_diskon"
        app:met_floatingLabelText="Masukkan diskon"
        android:hint="Masukkan Diskon (%)"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_tambah_gambar_diskon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Tambahkan Gambar"/>

            <ImageButton
                android:id="@+id/btn_tambah_gambar_diskon"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tambah" />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_diskon"
            android:layout_marginLeft="30dp"
            android:layout_width="70dp"
            android:layout_height="70dp"

            />

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_submit_diskon"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit" />

    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>
